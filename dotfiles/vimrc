" For NeoBundle
set shell=/bin/bash
set nocompatible

if has('vim_starting')
  set runtimepath+=~/.vim/bundle/neobundle.vim/
endif

call neobundle#rc(expand('~/.vim/bundle/'))

" Let NeoBundle manage NeoBundle
NeoBundleFetch 'Shougo/neobundle.vim'

" Bundles
NeoBundle 'Shougo/vimproc'
NeoBundle 'tpope/vim-fugitive'
NeoBundle 'Lokaltog/vim-easymotion'
NeoBundle 'scrooloose/nerdtree'
NeoBundle 'mileszs/ack.vim'
NeoBundle 'kchmck/vim-coffee-script'
NeoBundle 'Shougo/unite.vim'

filetype plugin indent on
"
" Brief help
" :NeoBundleList          - list configured bundles
" :NeoBundleInstall(!)    - install(update) bundles
" :NeoBundleClean(!)      - confirm(or auto-approve) removal of unused bundles

" Installation check.
NeoBundleCheck

" Highlighting
syntax enable

" Indentationi
set cindent
set smartindent
set autoindent
set cinkeys=0{,0},:,0#,^F

" No hard wrap
set wrap
set tw=0
set fo=cq
set wm=0

" Font & Style
set guifont=Consolas:h14
set antialias

" Close NERDTree on file opened
let NERDTreeQuitOnOpen = 1

" Use ; instead of : to save the shift keystroke
noremap ; :

" Reselect visual block after indent/outdent
vnoremap < <gv
vnoremap > >gv

" Normally Y copies the whole row - not from cursor to EOL like other capitals. Make Y behave like other capitals
map Y y$

"show indent guides
set lcs=tab:\‚Åû\
set list

" Clean trailing space
nnoremap <Leader>c :%s/<Space>\+$//<CR>

" Use sane regexes
noremap / /\v

" List buffers and switch to a buffer quickly
nnoremap K :ls<CR>:buffer<Space>

" Split screen
nmap * <C-w>v
nmap # <C-w>s

" NERDTree
nnoremap , :NERDTreeToggle<ENTER>

" Arrow keys move among splits in normal mode
nmap <Left> <C-W>h
nmap <Right> <C-W>l
nmap <Up> <C-W>k
nmap <Up> <C-W>k
nmap <Down> <C-W>j

" Arrow keys for indentation in visual mode
vmap <Left> <gv
vmap <Right> >gv
vmap <Up> [egv
vmap <Down> ]egv

" Commenting
map : <Leader>c<Space>

" Max out the height of the current split
nmap <Leader>h <C-W>_
" Max out the width of the current split
nmap <Leader>g <C-W>\|
" Normalize all split sizes, which is very handy when resizing terminal
nmap <Leader>n <C-W>=
" Swap top/bottom or left/right split
nmap <Leader>s <C-W>R

" Shortcuts for scrolling
nnoremap U H
nmap H <C-u>
nmap J <C-d>

" Use relative line numbering
set nonumber
set relativenumber
set rnu
