#!/usr/bin/env bash

APPLICATION_NAME=$1

>&2 echo "----> Installing '${APPLICATION_NAME}'..."
brew cask list | grep $APPLICATION_NAME >/dev/null
if [[ $? -ne 0 ]]; then
  brew cask install $APPLICATION_NAME
  if [[ $? -ne 0 ]]; then
    >&2 echo "----> ERROR: trying to install '${APPLICATION_NAME}'..."
    exit 3
  fi
fi

>&2 echo "----> Done installing '${APPLICATION_NAME}'."
exit 0
