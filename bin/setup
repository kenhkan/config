#!/usr/bin/env bash

DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"
ANSIBLE_PATH="$( cd "$DIR/../ansible/" && pwd )"


### Setup ###

# Ask for the administrator password upfront
sudo -v

# Get Homebrew
ruby -e "$(curl -fsSL https://raw.githubusercontent.com/Homebrew/install/master/install)"

# Get Ansible
brew install ansible


### Install ###

# Play setup playbook
ansible-playbook $ANSIBLE_PATH/setup_local.yml -i $ANSIBLE_PATH/hosts


### Setup OS X ###

# Use fish as the default shell
chsh -s /usr/local/bin/fish

# Keep-alive: update existing `sudo` time stamp until finish
while true; do sudo -n true; sleep 60; kill -0 "$$" || exit; done 2>/dev/null &

# Configure OS X. Most scripts addapted from
# https://github.com/mathiasbynens/dotfiles/blob/master/.osx
osx/app
osx/dock
osx/finder
osx/general
osx/git
osx/input
osx/mac
osx/neobundle
osx/no_itunes
osx/screen
osx/spotlight
osx/ssd
osx/ssh
osx/terminal
osx/webkit


# Other applications
open "etc/osxfuse-2.8.2.dmg"
open "etc/VeraCrypt_1.16.dmg"
find "/opt/homebrew-cask/Caskroom/blockblock/" -name "BlockBlock_Installer.app" | parallel open
find "/opt/homebrew-cask/Caskroom/backblaze/" -name "Backblaze Installer.app" | parallel open


echo ""
echo "*** DONE"
