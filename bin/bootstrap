#!/usr/bin/env bash

DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"

>&2 echo "----> Cloning config repo..."
git clone https://github.com/kenhkan/config.git ~/Desktop/config
( cd ~/Desktop/config; git pull origin master )

>&2 echo "----> Starting the setup process..."
$DIR/setup

>&2 echo "----> Done with the bootstrapping process."
exit 0
